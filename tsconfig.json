{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "lib/",
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es2015"
    },
    "include": [
        "./src/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
