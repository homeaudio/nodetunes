{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "outDir": "lib/",
        "declaration": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "allowJs": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true
    },
    "files": [
        "./src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
